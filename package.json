{
  "name": "nbind-kinect2",
  "version": "0.1.0",
  "description": "Node bindings to kinect 2 that follow the recently-introduced webAR standard",
  "license": "MIT",
  "author": "John Williams",
  "scripts": {
    "node-gyp": "node-gyp",
    "ndts": "ndts",
    "emcc-path": "emcc-path",
    "copyasm": "copyasm",

    "watch:tsc": "tsc --watch",

    "build:tsc": "tsc",
    "build:native": "eval 'node-gyp configure build && copyasm . dist'",
    "build:typings": "ndts dist > dist/main.d.ts",
    "build": "eval '(npm run build:native || echo Warning: problems with native build) && npm run build:tsc -s && npm run build:typings -s'",

    "start": "node dist/main.js",
    "start:tsc": "eval 'tsc && node dist/main.js'",

    "prepare": "npm run build -s"
  },
  "dependencies": {
    "nbind": "^0.3.6",
    "node-gyp": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^7.0.22",
    "typescript": "^2.1.4"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts"
}
